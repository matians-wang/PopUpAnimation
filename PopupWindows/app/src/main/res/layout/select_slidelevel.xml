<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ecar_layout"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
     >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/level1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/leveltext1_1" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/levelico1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/level2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/leveltext2_2" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/levelico2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/level3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/leveltext3_1" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/levelico3" />
        </LinearLayout>
</LinearLayout>
